  "TROUBLESHOOTING": {
    "frontendCantConnectToBackend": {
      "solution": "Check NEXT_PUBLIC_API_URL in .env.local matches backend port",
      "command": "curl http://localhost:5295/health"
    },
    "emailNotSending": {
      "solution": "Check user secrets are set",
      "command": "dotnet user-secrets list",
      "note": "Emails will fail gracefully in development - registration still works"
    },
    "erpAlwaysFails": {
      "solution": "Enable mock mode in appsettings.json",
      "setting": "ErpApi.EnableMockMode = true"
    },
    "databaseMigrationFailed": {
      "solution": "Drop and recreate database",
      "commands": [
        "dotnet ef database drop --force",
        "dotnet ef database update"
      ]
    }
  },

