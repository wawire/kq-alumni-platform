  "STARTUP_COMMANDS": {
    "frontend": [
      "cd kq-alumni-frontend",
      "npm install",
      "npm run dev"
    ],
    "backend": [
      "cd KQAlumni.Backend/src/KQAlumni.API",
      "dotnet user-secrets set \"Email:Username\" \"YOUR_EMAIL\"",
      "dotnet user-secrets set \"Email:Password\" \"YOUR_PASSWORD\"",
      "dotnet user-secrets set \"JwtSettings:SecretKey\" \"YOUR_SECRET_KEY\"",
      "cd ../..",
      "dotnet ef database update --project src/KQAlumni.Infrastructure --startup-project src/KQAlumni.API",
      "cd src/KQAlumni.API",
      "dotnet run"
    ]
  },

