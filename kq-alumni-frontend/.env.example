# =====================================================
# ENVIRONMENT VARIABLES EXAMPLE
# Copy this file to .env.local for local development
# or .env.production for production deployment
# =====================================================

# ========================================
# API Configuration (REQUIRED)
# ========================================

# Backend API URL
# Development: http://localhost:5295
# Production: https://your-api-domain.com
NEXT_PUBLIC_API_URL=http://localhost:5295

# API Request Timeout in milliseconds
NEXT_PUBLIC_API_TIMEOUT=30000

# ========================================
# Application Configuration
# ========================================

# Environment (development, staging, production)
NEXT_PUBLIC_ENV=development

# Application Name
NEXT_PUBLIC_APP_NAME=KQ Alumni Association

# Application Version
NEXT_PUBLIC_APP_VERSION=1.0.0

# ========================================
# Feature Flags
# ========================================

# Enable Analytics (Google Analytics, etc.)
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Enable Debug Mode (verbose logging, dev tools)
NEXT_PUBLIC_ENABLE_DEBUG_MODE=true

# ========================================
# Contact & Support
# ========================================

# Support Email Address
NEXT_PUBLIC_SUPPORT_EMAIL=KQ.Alumni@kenya-airways.com

# ========================================
# Logging
# ========================================

# Log Level (debug, info, warn, error)
NEXT_PUBLIC_LOG_LEVEL=debug

# ========================================
# Optional: External Services
# ========================================

# Google Analytics Tracking ID (if enabled)
# NEXT_PUBLIC_GA_TRACKING_ID=UA-XXXXXXXXX-X

# Sentry DSN for Error Tracking (if enabled)
# NEXT_PUBLIC_SENTRY_DSN=https://xxx@sentry.io/xxx

# ========================================
# NOTES
# ========================================
#
# 1. Never commit .env.local or .env.production files
# 2. All NEXT_PUBLIC_* variables are exposed to the browser
# 3. Keep sensitive credentials in server-side env variables only
# 4. Update next.config.js if you add new public variables
#
