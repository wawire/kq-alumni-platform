# =====================================================
# PRODUCTION ENVIRONMENT (LOCAL DATABASE)
# Copy this file to .env.production.local for production builds
# These variables will be used when building with: npm run build
# =====================================================

# Backend API URL (REQUIRED)
# For local production build with local database
NEXT_PUBLIC_API_URL=http://localhost:5295

# API Request Timeout (in milliseconds)
NEXT_PUBLIC_API_TIMEOUT=30000

# Environment identifier
NEXT_PUBLIC_ENV=production

# Application
NEXT_PUBLIC_APP_NAME=KQ Alumni Association
NEXT_PUBLIC_APP_VERSION=1.0.0

# Feature Flags (disabled for production)
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DEBUG_MODE=false

# Email
NEXT_PUBLIC_SUPPORT_EMAIL=KQ.Alumni@kenya-airways.com

# Logging (use 'info' for production, 'debug' for troubleshooting)
NEXT_PUBLIC_LOG_LEVEL=info

# =====================================================
# NOTE: If deploying to a remote server, update:
# NEXT_PUBLIC_API_URL=https://your-api-domain.com
# =====================================================
