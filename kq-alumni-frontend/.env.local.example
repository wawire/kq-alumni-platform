# =====================================================
# LOCAL DEVELOPMENT ENVIRONMENT
# Copy this file to .env.local and update the API URL
# with the port your backend is running on
# =====================================================

# Backend API - Local Development
# Check your backend console for the actual port (usually 5295, 5000, or 5001)
NEXT_PUBLIC_API_URL=http://localhost:5295

# API Timeout (milliseconds)
NEXT_PUBLIC_API_TIMEOUT=30000

# Environment
NEXT_PUBLIC_ENV=development

# Site URL - Used for Open Graph and social media previews
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Application
NEXT_PUBLIC_APP_NAME=KQ Alumni Association
NEXT_PUBLIC_APP_VERSION=1.0.0

# Feature Flags (enabled for development)
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DEBUG_MODE=true

# Email
NEXT_PUBLIC_SUPPORT_EMAIL=KQ.Alumni@kenya-airways.com

# Logging
NEXT_PUBLIC_LOG_LEVEL=debug
